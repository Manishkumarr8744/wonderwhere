<%  layout("/layouts/boilerplate") %>

<div class="row mt-3">
    <div class="col-6 offset-3">
        <h1 class="col-8 offset-4">Login for WonderWhere</h1>
         <form action="/login" method="post"  class="needs-validation" novalidate >
            <div class="mb-3 "> 
                <label for="username" class="form-label">Username</label>
                <input required type="text" id="username"   name="username" class="form-control" placeholder="enter username">
                <div class="valid-feedback">
                    enter valid username
                  </div>
            </div>
            
            <div class="mb-3 "> 
                <label for="password" class="form-label">Password</label>
                <input required type="text" id="password"   name="password" class="form-control" placeholder="enter password">
                <div class="valid-feedback">
                    enter Strong Password
                  </div>
            </div>
            <button class="btn btn-success  offset-5 mb-2">Login </button>
         </form>
    </div>
</div>